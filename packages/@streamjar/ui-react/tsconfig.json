{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"declaration": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es6",
            "es2016.array.include",
            "scripthost"
        ],
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
	],
	"exclude": [
		"./src/lib/**/*"
	]
}
